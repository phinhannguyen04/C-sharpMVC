<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="shortcut icon" href="~/img/fav.png" type="image/x-icon">
    <link rel="stylesheet" href="https://kit-pro.fontawesome.com/releases/v5.12.1/css/pro.min.css">
    <link rel="stylesheet" href="~/css/uikit.css" />
    <link rel="stylesheet" type="text/css" href="~/css/style.css" asp-append-version="true">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/uikit@3.16.20/dist/css/uikit.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.16.20/dist/js/uikit.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <title>Welcome To Cleopatra</title>
</head>

<body class="bg-gray-100">

    @await Component.InvokeAsync("AdminHeader")
    <main>
        <div class="h-screen flex flex-row flex-wrap">
            @await Component.InvokeAsync("AdminSidebar")
            <div class="bg-gray-100 flex-1 p-6 md:mt-16 grid grid-cols-8">

                @await Component.InvokeAsync("AdminEmailNavigationPanel")

                <div class="col-span-6 card flex flex-col">
                    @RenderBody()
                </div>
            </div>

        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script src="~/js/scripts.js" asp-append-version="true"></script>
</body>
</html>
